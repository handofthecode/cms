<form method="post" action="/<%= @filename %>/rename">
  <label for="title">Rename "<%= @filename %>":</label>
  <br>
  <input type="text" name="title" cols="12" class="inline" value="<%= @filename %>"><%= @extension %>
  <br>
  <button type="submit">Save Changes</button>
  <a href="/index">Cancel</a>
</form>